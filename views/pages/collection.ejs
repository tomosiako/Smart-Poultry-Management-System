<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Collections Record</title>
    <link rel="stylesheet" href="./css/collection.css">
</head>
<body>
    <div class="dashboard-container">
        <header>
            <h1>Poultry Farm Employee Dashboard</h1>
            <nav>
                <ul>
                    <li><a href="/employeeDashboard">Dashboard</a></li>
                    <li><a href="/usedproducts">Products Used</a></li>
                    <li><a href="/collection">Collections</a></li>
                    <li><a href="/">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <!-- COLLECTION FORM -->
            <section class="form-section">
                <h2>Record Daily Collection</h2>

                <form class="collection-form">
                    <label for="date">Date</label>
                    <input type="date" id="date" required>

                    <label for="item">Item Collected</label>
                    <input type="text" id="item" placeholder="e.g., Eggs, Dead birds, Feathers..." required>

                    <label for="quantity">Quantity Collected</label>
                    <input type="number" id="quantity" placeholder="Enter quantity..." required>

                    <label for="notes">Notes</label>
                    <textarea id="notes" placeholder="Additional information (optional)..."></textarea>

                    <button type="submit">Submit Collection</button>
                </form>
            </section>

            <!-- RECENT COLLECTIONS -->
            <section class="records-section">
                <h2>Recent Collections</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Item</th>
                            <th>Quantity</th>
                            <th>Notes</th>
                        </tr>
                    </thead>

                    <tbody>
                        <tr>
                            <td>2025-12-09</td>
                            <td>Eggs</td>
                            <td>120</td>
                            <td>Morning collection from House A</td>
                        </tr>
                        <tr>
                            <td>2025-12-08</td>
                            <td>Dead Birds</td>
                            <td>2</td>
                            <td>Found during inspection</td>
                        </tr>
                        <!-- More rows added dynamically -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>
</html>
