<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Product Usage</title>
    <link rel="stylesheet" href="./css/usedproducts.css">
</head>
<body>
    <div class="dashboard-container">
        <header>
            <h1>Poultry Farm Employee Dashboard</h1>
            <nav>
                <ul>
                    <li><a href="/employeeDashboard">Dashboard</a></li>
                    <li><a href="/usedproducts">Products Used</a></li>
                      <li><a href="/collection">Collections</a></li>
                    <li><a href="#">Reports</a></li>
                    <li><a href="/">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <!-- PRODUCT USAGE FORM -->
            <section class="form-section">
                <h2>Record Products Used</h2>
                <form class="product-form">
                    <label for="date">Date</label>
                    <input type="date" id="date" required>

                    <label for="product">Product Name</label>
                    <input type="text" id="product" placeholder="e.g., Feed A, Medicine B..." required>

                    <label for="quantity">Quantity Used</label>
                    <input type="number" id="quantity" placeholder="Enter quantity..." required>

                    <label for="notes">Notes</label>
                    <textarea id="notes" placeholder="Any additional notes..."></textarea>

                    <button type="submit">Submit Record</button>
                </form>
            </section>

            <!-- RECENT PRODUCT USAGE RECORDS -->
            <section class="records-section">
                <h2>Recent Product Usage</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Product Name</th>
                            <th>Quantity Used</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2025-12-08</td>
                            <td>Feed A</td>
                            <td>20 kg</td>
                            <td>Used for morning feeding</td>
                        </tr>
                        <tr>
                            <td>2025-12-07</td>
                            <td>Medicine B</td>
                            <td>5 ml</td>
                            <td>Vaccination applied to 30 chicks</td>
                        </tr>
                        <!-- Dynamic rows can be added with JS -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</body>
</html>
