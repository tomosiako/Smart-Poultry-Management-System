<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manager Dashboard</title>
    <link rel="stylesheet" href="./css/manager.css">
</head>
<body>
    <div class="manager-dashboard-container">
        <header>
            <h1>Poultry Farm Manager Dashboard</h1>
            <nav>
                <ul>
                    <li><a href="#Dashboard">Dashboard</a></li>
                    <li><a href="#employee">Employees</a></li>
                    <li><a href="#inventory">Inventory</a></li>
                    <li><a href="#vendors">Vendors</a></li>
                    <li><a href="#purchase">Purchases</a></li>
                    <li><a href="#farmstate">Farm State</a></li>
                    <li><a href="#">Reports</a></li>
                    <li><a href="/">Logout</a></li>
                </ul>
            </nav>
        </header>

        <main>
            <!-- Employee Management -->
           
             <section class="card" id="employee">
                <h2>Employee Management</h2>
                <form class="manager-form" method="post" action="/registeremployee">
                   
                    <label for="employee-name">Employee Name</label>
                    <input type="text" id="employee-name" placeholder="Name" name="name" required>

                    <label for="employee-name">Employee Work Id</label>
                    <input type="text" id="employee-work-id" name="workid" placeholder="JHT/678" required>
                      
                    <label for="employee-name">Phone Number</label>
                    <input type="text" id="phone" placeholder="Phone Number" name="phone"required>
                     
                    <label for="employee-name">Email</label>
                    <input type="email" id="email" placeholder="Email" name="email"required>
                      
                    <label for="employee-name">ID NUmber</label>
                    <input type="text" id="employee-name" placeholder="ID Number" name="id_number"required>
                      
                    <label for="employee-name">Password</label>
                    <input type="text" id="employee-name" placeholder="John Doe" name="password" required>

                  
                    <label for="employee-role">Role</label>
                        <select id="employee-role" name="role"required>
                            <option value="">-- Select Role --</option>
                            <option value="Farm Worker">Farm Worker</option>
                            <option value="Supervisor">Supervisor</option>
                            <option value="Manager Assistant">Manager Assistant</option>
                            <option value="Cleaner">Cleaner</option>
                            <option value="Security">Security</option>
                        </select>

                    <button type="submit">Add Employee</button>
                </form>

              
                <ul class="employee-list">
                <% if (results.length > 0) { %>
                    <% results.forEach(result => { %>
                        <li>
                            <%= result.name %>

                            <form action="/removeEmployee" method="POST" style="display:inline;">
                                <input type="hidden" name="id" value="<%= result.number %>">
                                <button type="submit" class="remove-btn">Remove</button>
                            </form>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li>No employees found</li>
                <% } %>
            </ul>

            </section>
        

            <!-- Inventory Management -->
          
              <section class="card" id="inventory">
                <h2>Inventory Management</h2>
                <form class="manager-form">
                    <label for="product-name">Product Name</label>
                    <input type="text" id="product-name" placeholder="Feed / Vaccine" required>

                    <label for="quantity">Quantity</label>
                    <input type="number" id="quantity" placeholder="Enter quantity" required>

                    <button type="submit">Update Inventory</button>
                </form>

                <h3>Current Inventory</h3>
                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Chicken Feed</td>
                            <td>200 kg</td>
                        </tr>
                        <tr>
                            <td>Vaccine A</td>
                            <td>50 doses</td>
                        </tr>
                    </tbody>
                </table>
            </section>
          

            <!-- Vendor Management -->
          
              <section class="card" id="vendors">
                <h2>Vendors</h2>
                <form class="manager-form">
                    <label for="vendor-name">Vendor Name</label>
                    <input type="text" id="vendor-name" placeholder="Vendor Inc." required>

                    <label for="vendor-contact">Contact Info</label>
                    <input type="text" id="vendor-contact" placeholder="Phone / Email" required>

                    <button type="submit">Add Vendor</button>
                </form>

                <h3>Existing Vendors</h3>
                <ul class="vendor-list">
                    <li>Farm Supplies Ltd. <button class="remove-btn">Remove</button></li>
                    <li>HealthCare Vaccines <button class="remove-btn">Remove</button></li>
                </ul>
            </section>
          

            <!-- Farm State -->
          
              <section class="card" id="farmstate">
                <h2>Farm State / Conditions</h2>
                <p>Temperature: 28Â°C</p>
                <p>Humidity: 60%</p>
                <p>Water Supply: Adequate</p>
                <p>Feed Status: Sufficient</p>
            </section>
          

            <!-- Purchases -->
           
             <section class="card" id="purchase">
                <h2>Record Purchases</h2>
                <form class="manager-form">
                    <label for="purchase-item">Item</label>
                    <input type="text" id="purchase-item" placeholder="Feed / Vaccine" required>

                    <label for="purchase-quantity">Quantity</label>
                    <input type="number" id="purchase-quantity" placeholder="Enter quantity" required>

                    <label for="purchase-vendor">Vendor</label>
                    <input type="text" id="purchase-vendor" placeholder="Vendor name" required>

                    <button type="submit">Add Purchase</button>
                </form>
            </section>
           
        </main>
    </div>
</body>
</html>
